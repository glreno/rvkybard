         .PAGE       Cartridge Trailer
         *=  $BFF9
CARTINIT RTS 
         .WORD STARTUP
         .BYTE 0     ; just a zero
         .BYTE 4     ; boot opt - no disk
         .WORD CARTINIT
         .END 
